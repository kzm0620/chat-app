<div class="chat-header">
  <div class="chatname">hogehuga</div>
  <div class="chatbox">
    <div class="chatend"><a href="#">チャットを終了する</a></div>
  </div>  
</div>

<div class="messages">
  <div class="massage">
    <div class="upper-message">
      <div class="message-user">Tom</div>
      <div class="message-date">2020/3/31(WED) 12:43:30</div>
    </div>
    <div class="lower-message">
      <div class="message-content">おはよう</div>
    </div>

    <div class="upper-message">
      <div class="message-use">Tom</div>
      <div class="message-date">2020/4/5(WED) 15:26:12</div>
    </div>
    <div class="lower-message">
      <div class="message-content">こんばんは</div>
    </div>
  </div>
</div>


<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>